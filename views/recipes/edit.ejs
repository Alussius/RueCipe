<%- include("../partials/header") %>
<%- include("../partials/nav") %>

<div class="container-fluid">
	<div class="row">
		<h1 style="text-align: center;">Edit <%= recipe.name %></h1>
		<div style="width: 30%; margin: 25px auto">
			<form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="recipe[name]" placeholder="Name" value="<%= recipe.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="recipe[image]" placeholder="Image URL" value="<%= recipe.image %>">
				</div>
				<div class="form-group">
					<textarea class="form-control" name="recipe[description]" placeholder="Description" rows="5"><%= recipe.description %></textarea>
				</div>
				<div class="form-group">
					<textarea class="form-control" name="recipe[ingredients]" placeholder="Ingredients" rows="5"><%= recipe.ingredients %></textarea>
				</div>
				<div class="form-group">
					<textarea class="form-control" name="recipe[direction]" placeholder="Direction" rows="10"><%= recipe.direction %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">
						Submit
					</button>
				</div>
			</form>
			<p>
				Click <a href="/recipes/<%= recipe._id %>">here</a> to return.
			</p>			
		</div>
	</div>
	
</div>
	
<%- include("../partials/footer") %>